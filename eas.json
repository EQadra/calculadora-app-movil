{
  "cli": {
    "version": ">= 3.0.0"
  },
  "build": {
    "preview": {
      "distribution": "internal",         // Para builds que puedes instalar directamente (no para Play Store)
      "android": {
        "buildType": "apk"               // APK directo para pruebas
      }
    },
    "production": {
      "distribution": "store",           // Para publicar en Play Store
      "android": {
        "buildType": "app-bundle"        // AAB requerido por Google Play
      }
    }
  },
  "submit": {
    "production": {
      "android": {}
    }
  }
}
